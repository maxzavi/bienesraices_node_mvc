div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${id1.image}`)
    div(class="p-5 space-y-2")
        h3(class="text-2xl font-bold")= id1.title
        p(class="text-sm text-gray-600") Habitaciones: 
            span(class="text-gray-800 font-bold")= id1.bedrooms
        p(class="text-sm text-gray-600") WC: 
            span(class="text-gray-800 font-bold")= id1.wc
        p(class="text-sm text-gray-600") Precio: 
            span(class="text-gray-800 font-bold")= id1.price.name
        a(href=`/property/${id1.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver propiedad
