extends ../layout/app
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block container
    div(class="py-5")
        h1(class="text-4xl my-10 font-extrabold text-center")= property.title
        div
            a(href="#" class="font-bold text-gray-600 text-sm") Categoria:
                span(class="font-normal")= property.category.name 
        div(class="mt-5 md:flex md:gap-4 md:items-start") 
            div(class="md:w-2/3 bg-white shadow rounded-lg")
                img(src=`/uploads/${property.image}` alt=`Imagen de la propiedad ${property.title}`)
                div(class="px-5 py-18 space-y-5")
                    p= property.description 
                    h2(class="text-2xl leading-6 font-bold text-gray-900") Información Propiedad 
                    div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray-600 font-bold text-xs") WC
                            span(class="text-gray-800 block text-lg")= property.wc

                        p(class="text-gray-600 font-bold text-xs") Habitaciones
                            span(class="text-gray-800 block text-lg")= property.bedrooms

                        p(class="text-gray-600 font-bold text-xs") Estacionamiento
                            span(class="text-gray-800 block text-lg")= property.parking

                        p(class="text-gray-600 font-bold text-xs") Precio
                            span(class="text-gray-800 block text-lg")= property.price.name

            aside(class="md:w-1/3  bg-white shadow rounded-lg")
                h3(class="text-center py-10 leading-6 text-2xl font-bold text-gray-900") Ubicación

                div(class="h-96" id="map")
                    p(id="lat" class="hidden")=property.lat
                    p(id="lng" class="hidden")=property.lng

                div(class="p-5")
                    p(class="text-gray-600 font-bold text-xs") Direccion
                        span(id="street" class="text-gray-800 block text-lg")= property.street
                    if !isSeller
                        h3(class="text-2xl text-center my-10 font-extrabold text-gray-900") Vendedor
                        if sent
                            p(class="p-2 text-center bg-green-100 text-green-600 uppercase font-bold") Mensaje enviado correctamente
                        else if user
                            if errores
                                div(class="max-w-md mx-auto my-10")
                                    each error in errores
                                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

                            form(method="POST")
                                input(type="hidden" name="_csrf" value=  csrfToken)
                                div(class="space-y-5")
                                    label(for="message") Mensaje 
                                    textarea(id="message" name="message" class="w-full py-2 border border-gray-300 rounded-lg shadow placeholder-gray-400" placeholder="Coloca tu mensaje aquí") 
                                    input(type="submit" value="Enviar mensaje" class="bg-indigo-600 text-white font-bold uppercase text-sm w-full p-2 cursor-pointer")
                        else
                            div(class="flex flex-col items-center justify-center gap-2")
                                p(class="text-center") Si deseas contacta al vendedor
                                a(href="/user/register" class="text-indigo-600") deber crear una cuenta


block  scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/showmap.js")